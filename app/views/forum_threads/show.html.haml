- content_for( :title ) { 'Inklings Thread' }

- content_for( :body ) do
    
    %div.content
        %div#conversation-starter
            %h3
                = @thread.name
            %p
                = @thread.content
        %ol
            - for post in @posts
                = post.content
                %br
        = form_for( @post ) do | f |
            = f.hidden_field :forum_thread_id, :value => params[ :id ]
            = f.label :comment
            = f.text_field :content
            = f.submit 'Post'