- content_for( :title ) { manuscripts_edit_title( @manuscript ) }

= content_for( :body ) do
    
    %div.content
        %h2
            Manuscript Settings
        %div#form-manuscript
            = form_for @manuscript, :method => :patch do | f |
                = render :partial => 'shared/error_messages', :locals => { :object => f.object }
                %p
                    = f.label :title
                    = f.text_field :title
                %p
                    = f.label :genre
                    = f.select :genre_ids, options_from_collection_for_select( Genre.all, 'id', 'name', :selected => @manuscript.genres.map( &:id ) ), {  }, { :multiple => true }
                %p
                    = f.label :rating
                    = f.select :rating_id, options_from_collection_for_select( Rating.all, 'id', 'name' )
                %p
                    = f.label :description
                    = f.text_area :description, :class => 'height-10em'
                = f.fields_for @inkling do | ff |
                    %p
                        = ff.label :word_count_goal, 'Word Count Goal'
                        %br
                        = ff.text_field :word_count_goal, :class => 'input-inline'
                        words
                    - unless @inkling.hardcore == true
                        %p
                            = ff.label :word_rate_goal, 'Word Rate Goal'
                            %br
                            = ff.text_field :word_rate_goal, :class => 'input-inline'
                            words every
                            = ff.text_field :word_rate_goal_basis, :class => 'input-inline'
                            day(s)
                        %p
                            = ff.label :revival_fee, 'Revival Fee'
                            %br
                            = ff.text_field :revival_fee, :class => 'input-inline'
                            = ff.select :revival_fee_currency, options_for_select( Inkling::CURRENCIES ), {  }, { :class => 'input-inline' }
                    %p
                        = f.submit 'Submit Changes', :class => 'button-flat'