- content_for( :title ) { new_password_reset_title }

%main.page-content.-lowered
    %section.content.-narrow
        %h1.heading.-medium
            Send Password Reset Email
        = form_for( @password_reset, { :url => password_resets_path, :method => :post } ) do | f |
            %div.field
                = f.label( :email )
                = f.text_field( :email )
                = f.error_message( :email )
            %div.buttons
                = f.submit( 'Submit', { :class => 'button -bright -left' } )
