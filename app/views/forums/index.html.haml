- content_for( :title ) { 'Inklings Forums' }

- content_for( :body ) do

    %div.content
        %table
            %tr
                %th
                    Community
                %th
                    Latest
            - for forum in @forums
                - if forum.group == 'community'
                    %tr
                        %td
                            = link_to h( forum.name ), forum_path( forum.id )
                        %td
                            - if forum.conversations.any?
                                = forum.conversations.order( :created_at ).last.name
        %br                                
        %table
            %tr
                %th
                    Writing
                %th
                    Latest
            - for forum in @forums
                - if forum.group == 'writing'
                    %tr
                        %td
                            = link_to h( forum.name ), forum_path( forum.id )
                        %td
                            - if forum.conversations.any?
                                = forum.conversations.order( :created_at ).last.name