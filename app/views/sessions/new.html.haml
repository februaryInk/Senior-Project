- content_for( :title ) { signin_title }

%main.page-content
    %div#signin
        = link_to( 'Inklings', root_path, :class => 'full-width logo' )
        %h1.centered.h--medium
            Sign In
        - if flash[ :session_error ]
            %div.div-errors
                = flash[ :session_error ]
        = form_for( :session, :url => signin_path ) do | f |
            %div.field
                = f.label :email
                = f.text_field :email
            %div.field
                = f.label :password
                %span
                    = link_to '(forgot password)', new_password_reset_path
                = f.password_field :password
            %div.field
                = f.check_box :remember_me
                %span
                    Remember Me
            %div
                = f.submit 'Sign In', :class => 'button-flat'
        %p
            = sanitize( "New around here? #{ link_to 'Sign up', root_path }." )
        %p
            = sanitize( "Need a new activation email? #{ link_to 'Click here', new_account_activation_path }." )
