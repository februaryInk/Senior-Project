- content_for( :title ) { signin_title }

%main.page-content--lowered
    %section.content--narrow
        %div.even-split
            %div
                %div.align-baseline
                    = link_to( root_path, :class => 'logo' ) do
                        %h1
                            Inklings
                %div.align-baseline
                    %h2.h--medium.no-whitespace
                        Sign in.
        %div.bumped
            - if flash[ :session_error ]
                %div.div-errors
                    = flash[ :session_error ]
        = form_for( :session, :url => signin_path ) do | f |
            %div.field
                = f.label :email
                = f.text_field :email
            %div.field
                = f.label :password
                %span.field-note
                    = sanitize( "(#{link_to( 'forgot password?', new_password_reset_path, :class => 'underlined' )})" )
                = f.password_field :password
            %div.field
                = f.check_box :remember_me
                = f.label :remember_me, 'Remember Me', :class => 'no-whitespace'
            %div.content--slender
                %div.buttons--large
                    = f.submit 'Sign In', :class => 'button--bright button--large full-width'
        %div.even-split.pushed
            %div
                %div
                    %p.t--fine
                        = sanitize( "New around here? #{link_to( 'Sign up', new_user_path, :class => 'underlined' )}." )
                %div
                    %p.t--fine
                        = sanitize( "Need a new activation email? #{link_to( 'Click here', new_account_activation_path, :class => 'underlined' )}." )
