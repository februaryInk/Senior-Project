- content_for( :title ) { signin_title }

- content_for( :body ) do

    %div.content
        %div#signin
            %h2
                Sign in to Inklings
            - if flash[ :session_error ]
                %div.div-errors
                    = flash[ :session_error ]
            = form_for( :session, :url => signin_path ) do | f |
                %p
                    = f.label :email
                    = f.text_field :email
                %p
                    = f.label :password
                    %span
                        = link_to '(forgot password)', new_password_reset_path
                    = f.password_field :password
                %p
                    = f.check_box :remember_me
                    %span
                        Remember Me
                %p
                    = f.submit 'Sign In', :class => 'button-flat'
            %p
                = sanitize( "New around here? #{ link_to 'Sign up', root_path }." )
            %p
                = sanitize( "Need a new activation email? #{ link_to 'Click here', new_account_activation_path }." )